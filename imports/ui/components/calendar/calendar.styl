#external-events
  .mdl-chip
    cursor: move

#calendarWrap
  button
    float: right
    margin: 0 1em

#calendar
  color: black

.fc-title
  color: white

.fc-day
  position: relative

.imageWrap
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0
  display: flex
  justify-content: center
  align-items: center
  overflow: hidden
  img
    flex-shrink:0
    min-width:100%
    min-height:100%
    max-width:100%

.fc-day-number
  text-shadow: 2px 2px white

.fc-event
  opacity: 1
  transition: opacity .5s ease-in-out

#calendar.photoMode
  .fc-event
    opacity: 0

.fc-scroller
   overflow-y: hidden !important
   min-height: 335px
